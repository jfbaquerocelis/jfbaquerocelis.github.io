@import 'nib/vendor'

vendor-prefixes = o ms webkit moz official

$primary = #37474F
$secondary = #4392F1
$accent = #119DA4
$gray = #F5F0F6
$black = #2e3436

body
	color $black
	font-family 'K2D', sans-serif

/* UI Components */
.article--hide
	left -100%
	animation-name hideOut
	animation-duration .5s
.article--show
	left 0
	animation-name showUp
	animation-duration .5s
.jf-links
	color white
	transition all .3s ease
	&:hover
		color $primary

@import 'components/*'
@import 'components/sections/*'

// Loader
.loader
	background-color $primary
	display flex
	height 100vh
	justify-content center
	position absolute
	width 100vw
	z-index 999
	&__container
		align-items center
		align-self center
		display flex
		flex-direction column
	&__message
		margin-top 2.3rem
		color $gray
	&__hexagon
		animation loaderHexagon 1.2s linear infinite forwards
		background-color $accent
		height 57.74px
		opacity 1
		position relative
		width 100px
		&:after, &:before
			content ""
			position absolute
			width 0
			border-left 50px solid transparent
			border-right 50px solid transparent
		&:after
			border-top 28.87px solid $accent
			top 100%
			width 0
		&:before
			bottom 99%
			border-bottom 28.87px solid $accent

// Section Control Actions
.control-actions
	display none

// *************************** Viewport width ******************************
@media screen and (min-width : 1500px)
	body
		font-size 24px

	// Section menu
	.header
		&__menu-list__link
			padding 1.5rem 2rem

	// Section Container Articles
	.welcome, .portfolio, .contact
		padding 0 8rem
		margin 3rem 0

	// Section container myself
	.myself
		&__footer
			&__by
				font-size 1.2rem
			&__social
				& .myself__footer__link
					font-size 3rem

// *************************** Viewport width ******************************
@media screen and (max-width : 1150px)
	// Section Container myself
	.myself__profile
		font-size .9rem

// *************************** Viewport width ******************************
@media screen and (max-width : 1100px)
	// Section Container Articles
	.welcome, .portfolio, .contact
		padding 0 4rem

// *************************** Viewport width ******************************
@media screen and (max-width : 1050px)
	// Section Container myself
	.myself
		&__fullname
			font-size 1.6rem
	// Section Menu
	.menu
		&-list__link
			font-size .85rem


// *************************** Viewport width ******************************
@media screen and (max-width : 950px)
	body
		overflow hidden
		position relative
	.blanketBody
		background $black
		display none
		height 100vh
		opacity .4
		position fixed
		top 0
		width 100vw
		z-index 4

	// Section Control Actions
	.control-actions
		background-color $accent
		box-shadow 0 1px 7px #454545
		color white
		height 3.5rem
		top 0
		position absolute
		width 100vw
		z-index 9
		&__menu
			padding .5rem .9rem
			font-size 1.6rem

	// Section Container Master
	.container-master
		flex-direction column
		& .container__myself
		& .container__articles
			width 100%

	// Section Container Articles
	.container__articles
		display none
	.welcome, .portfolio, .contact
		display none
		margin-top 3.6rem
	.menu
		display none

	// Section Container myself
	.myself
		position relative
		border none
		&__container__avatar
			width 15rem
			height 15rem
		&__fullname
			font-size 2rem
		&__profile
			font-size 1rem
		&__menu__action
			display block
			position absolute
			font-size 1.6rem
			left .9rem
			top 1rem
			z-index 1
		&__container__menu
			background-color white
			box-shadow 2px 0px 15px #333
			display block
			height 100vh
			left -100%
			position fixed
			top 0
			width 40%
			z-index 11

			^[0]__data
				background-color $accent
				display flex
				align-items center
				border-bottom 1px solid $gray
				padding 1.5rem .4rem
				&__container-avatar
					margin .5rem .5rem 0 0
					height 4rem
					width 4rem
				&__avatar
					background-image url('../image/john2.jpg')
					background-size cover
					background-repeat no-repeat
					background-position center
					border-radius 50%
					width 100%
					height 100%
				&__info
					color: white;
					&__fullname, &__role
						margin 0
						letter-spacing .8px
					&__role
						color #e3e3e3;
						font-size .8rem
			^[0]__menu
				padding 1.5rem 1rem
				margin 0
				&__item
					display flex
					align-items center
					font-size .9rem
				&__link
					color #545454
					display block
					font-size 1rem
					padding 1rem 0
					text-decoration none
					text-transform uppercase
					& .fa-stack
						font-size .9rem
						margin-right .5rem
				&__link--active
					color $secondary
					&__soon
						background-color $secondary
						font-size .6rem
						color $gray
						margin-left .4rem
						padding .2rem .3rem
						border-radius 3px
					.material-icons
						padding-right .5rem

// *************************** Viewport width ******************************
@media screen and (max-width : 700px)
	// Section Welcome
	.welcome
		&__container-stack
			width 100%
	// Section Portfolio
	.portfolio
		&__works__item
			flex-basis 100%
			&__header__logo
				width 11%

// *************************** Viewport width ******************************
@media screen and (max-width : 600px)
	// Section Container myself
	.myself
		&__container__avatar
			width 14rem
			height 14rem
		&__fullname
			font-size 1.7rem
		&__container__menu
			width 60%

// *************************** Viewport width ******************************
@media screen and (max-width : 450px)
	// Section Container myself
	.myself
		&__container__menu
			width 70%

	.welcome, .portfolio, .contact
		padding 0 2rem

	// Section Welcome
	.welcome
		&__stack
			align-items flex-start
			flex-direction column
			&__title
				font-size 1rem
				margin-bottom .2rem
				padding-bottom .2rem

	// Section Portfolio
	.portfolio
		&__blockquote
			width 100%
		&__works__item__header__logo
				width 14%
